<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

    <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string">Home</item>
                    <item name="link" xsi:type="string">http://thanhlocal.com:8000/</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Features</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Features</item>
                    <item name="label" xsi:type="string">Features</item>
                    <item name="link" xsi:type="string">Features</item>
                </argument>
            </action>
                <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Type</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Type</item>
                    <item name="label" xsi:type="string">Index Features</item>
                </argument>
            </action>
        </referenceBlock>

        <referenceContainer name="content">
            <block class="Warehouse\Features\Block\Features\Index" name="Warehouse_Features_Features" template="Warehouse_Features::features/index.phtml" />
        </referenceContainer>
    </body>
</page>